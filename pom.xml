<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>de.derfrzocker</groupId>
    <artifactId>custom-ore-generator</artifactId>
    <version>${maven.build.timestamp}</version>
    <packaging>jar</packaging>
    <description>A custom ore generator</description>
    <name>Custom-Ore-Generator</name>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <maven.compiler.source>1.8</maven.compiler.source>
        <maven.compiler.target>1.8</maven.compiler.target>
        <maven.build.timestamp.format>yyyy.MM.d</maven.build.timestamp.format>
        <project.authors>DerFrZocker</project.authors>
        <version.maven-install-plugin>2.5.2</version.maven-install-plugin>
        <version.non-maven1>1.0.0</version.non-maven1>
        <nms.directory>G:/Minecraft/Versions</nms.directory>
    </properties>

    <repositories>
        <repository>
            <id>spigot-repo</id>
            <url>https://hub.spigotmc.org/nexus/content/repositories/snapshots/</url>
        </repository>
    </repositories>

    <dependencies>
        <dependency>
            <groupId>org.projectlombok</groupId>
            <artifactId>lombok</artifactId>
            <version>1.18.0</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.spigotmc</groupId>
            <artifactId>spigot-api</artifactId>
            <version>1.13.2-R0.1-SNAPSHOT</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>minecraft</groupId>
            <artifactId>nms-1.11.2</artifactId>
            <version>1.11.2</version>
            <scope>system</scope>
            <systemPath>${nms.directory}/1.11.2/spigot-1.11.2.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>minecraft</groupId>
            <artifactId>nms-1.12.2</artifactId>
            <version>1.12.2</version>
            <scope>system</scope>
            <systemPath>${nms.directory}/1.12.2/spigot-1.12.2.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>minecraft</groupId>
            <artifactId>nms-1.13</artifactId>
            <version>1.13</version>
            <scope>system</scope>
            <systemPath>${nms.directory}/1.13/spigot-1.13.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>minecraft</groupId>
            <artifactId>nms-1.13.1</artifactId>
            <version>1.13.1</version>
            <scope>system</scope>
            <systemPath>${nms.directory}/1.13.1/spigot-1.13.1.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>minecraft</groupId>
            <artifactId>nms-1.13.2</artifactId>
            <version>1.13.2</version>
            <scope>system</scope>
            <systemPath>${nms.directory}/1.13.2/spigot-1.13.2.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>org.junit.jupiter</groupId>
            <artifactId>junit-jupiter-api</artifactId>
            <version>5.1.0</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.hamcrest</groupId>
            <artifactId>hamcrest-all</artifactId>
            <version>1.3</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.mockito</groupId>
            <artifactId>mockito-core</artifactId>
            <version>2.18.3</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.powermock</groupId>
            <artifactId>powermock-api-mockito</artifactId>
            <version>1.4.9</version>
            <type>jar</type>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.powermock</groupId>
            <artifactId>powermock-module-junit4</artifactId>
            <version>1.4.9</version>
            <type>jar</type>
            <scope>test</scope>
        </dependency>

    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-shade-plugin</artifactId>
                <version>3.0.0</version>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>shade</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <createDependencyReducedPom>false</createDependencyReducedPom>
                    <shadedArtifactAttached>false</shadedArtifactAttached>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <version>2.20</version>
            </plugin>
        </plugins>

        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <filtering>true</filtering>
            </resource>
        </resources>
    </build>

</project>